<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".retailer_productinfo">


    <TextView
        android:id="@+id/text_productinformation"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_round"
        android:text="Product Information"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_productname"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round"
        android:text="Name:"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_accountimage" />

    <TextView
        android:id="@+id/textview_productname"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_theme"
        android:text="Product Name"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_accountimage" />


    <TextView
        android:id="@+id/textview_productprice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_theme"
        android:text="Product Price"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textview_productname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textview_productname"
        app:layout_constraintTop_toBottomOf="@+id/textview_productname" />

    <TextView
        android:id="@+id/textview_productharvest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:background="@drawable/text_theme"
        android:text="Harvest Date"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textview_productprice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textview_productprice"
        app:layout_constraintTop_toBottomOf="@+id/textview_productprice" />

    <TextView
        android:id="@+id/text_productdescription"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_round"
        android:text="Description:"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_productprice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_productprice"
        app:layout_constraintTop_toBottomOf="@+id/text_productprice" />

    <TextView
        android:id="@+id/textview_productdescription"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/text_theme"
        android:text="Product Description"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_accountimage"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/image_accountimage"
        app:layout_constraintTop_toBottomOf="@+id/image_accountimage" />

    <TextView
        android:id="@+id/text_productrating"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_round"
        android:text="Rating:"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_productharves"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_productharves"
        app:layout_constraintTop_toBottomOf="@+id/text_productharves" />

    <TextView
        android:id="@+id/text_productprice"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_round"
        android:text="Price per kg (â‚±):"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_productname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_productname"
        app:layout_constraintTop_toBottomOf="@+id/text_productname" />

    <TextView
        android:id="@+id/text_productharves"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@drawable/shape_round"
        android:text="Harvest Date:"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_productdescription"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_productdescription"
        app:layout_constraintTop_toBottomOf="@+id/text_productdescription" />

    <ImageView
        android:id="@+id/image_accountimage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/text_productinformation"
        app:layout_constraintStart_toStartOf="@+id/text_productinformation"
        app:layout_constraintTop_toBottomOf="@+id/text_productinformation"
        tools:srcCompat="@drawable/user" />

    <RatingBar
        android:id="@+id/rating_product"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/text_theme"
        app:layout_constraintEnd_toEndOf="@+id/textview_productharvest"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textview_productharvest"
        app:layout_constraintTop_toBottomOf="@+id/textview_productharvest" />

    <Button
        android:id="@+id/button_orderproduct"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:background="@drawable/button_theme"
        android:text="Order Product"
        android:textColor="#FFFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textview_productdescription"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/textview_productdescription"
        app:layout_constraintTop_toBottomOf="@+id/textview_productdescription" />


</androidx.constraintlayout.widget.ConstraintLayout>